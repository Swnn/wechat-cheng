view {
  overflow: visible;
}

.boss {
  width: 750rpx;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.boss-pic {
  width: 160rpx;
  height: 160rpx;
}

.boss-boss-pic {
  display: flex;
  flex-direction: column;
  position: relative;
  top: -20rpx;
}

.user_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}

.live {
  flex: 1;
  text-align: center;
  width: 750rpx;
  height: 100%;
  position: relative;
  bottom: 130rpx;
}

.live>view {
  margin-top: 30rpx;
  font-size: 34rpx;
  padding: 0 30rpx;
}

.live .ctnum {
  font-size: 32rpx;
  color: #999;
}

.line {
  width: 650rpx;
  height: 2rpx;
  background-color: #e6e6e6;
  margin-left: 50rpx;
}

.land {
  font-size: 32rpx;
  font-weight: bold;
  padding: 50rpx 0 0 50rpx;
}

.public {
  font-size: 30rpx;
  padding: 20rpx 60rpx;
  color: #757575;
}

.size {
  width: 650rpx;
  height: 90rpx;
  margin: 20rpx 50rpx;
  font-size: 32rpx;
  line-height: 90rpx;
  text-align: center;
}

.boss-box {
  height: 500rpx;
  position: relative;
  top: -50rpx;
}


.home {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #da251c;
  position: fixed;
  bottom: 100px;
  right: 12px;
  text-align: center;
  line-height: 40px;
  color: #fff;
  font-size: 13px;
}
