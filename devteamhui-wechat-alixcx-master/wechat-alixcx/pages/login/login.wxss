.back-index {
  font-size: 13px;
  margin-right: 10px;
  color: #da251c;
  border: 1px solid #da251c;
  display: inline-block;
  padding: 3px 5px;
}

.i-top {
  text-align: center;
  padding: 10px;
}

.tx image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.ts {
  display: flex;
  background: #ffffcb;
  padding: 10px 0;
}

.ts .iconfont {
  flex: 0 0 50px;
  color: #da251c;
  text-align: center;
  font-size: 25px;
}

.ts .des {
  flex: 1;
  padding: 5px 10px;
  color: #e27561;
}

.new {
  background: #fff;
}

.new .inp-info {
  margin: 0 15rpx;
}

.input1 {
  display: flex;
  line-height: 40px;
  border-bottom: 1px solid #f5f5f5;
}

.input1 .t-left {
  flex: 0 0 80px;
  font-size: 13px;
  color: #333;
}

.input1 .status-right {
  flex: 0 0 60px;
}

.input1 .txt-right {
  flex: 0 0 100px;
  color: #e27561;
  font-size: 13px;
  text-align: right;
  padding-right: 10px;
}

.input1 .in-center {
  flex: 1;
  height: 40px;
  line-height: 40px;
  font-size: 13px;
}

.pop .infos .p-title {
  line-height: 40px;
  text-align: center;
  border-bottom: 1px solid #f5f5f5;
}

.pop .infos .txt-row {
  display: flex;
  padding: 0 15px;
  line-height: 35px;
}

.pop .infos .txt-row .r-title {
  flex: 0 0 70px;
}

.pop .infos .txt-row .r-txt {
  flex: 1;
}

.pop .infos .canel {
  background: #ccc;
  border-radius: 0;
  color: #666;
  font-size: 14px;
  line-height: 40px;
  margin-top: 10px;
}

.pop .phone-edit .p-title {
  line-height: 40px;
  text-align: center;
  border-bottom: 1px solid #f5f5f5;
}

.pop .phone-edit .txt-row {
  display: flex;
  padding: 0 15px;
  line-height: 40px;
}

.pop .phone-edit .txt-row .r-title {
  flex: 0 0 60px;
}

.pop .phone-edit .txt-row .r-input {
  flex: 1;
  height: 40px;
  line-height: 40px;
  font-size: 13px;
}

.pop .phone-edit .txt-row .r-txt {
  flex: 0 0 70px;
  font-size: 12px;
  text-align: right;
}

.pop .phone-edit .pop-btn {
  display: flex;
}

.pop .phone-edit .pop-btn .btn {
  flex: 1;
  border-radius: 0;
  font-size: 14px;
  line-height: 40px;
  margin-top: 10px;
  color: #fff;
}

.pop .phone-edit .pop-btn .canel {
  background: #ccc;
  color: #666;
}

.home {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #d93076;
  position: fixed;
  bottom: 100px;
  right: 12px;
  text-align: center;
  line-height: 40px;
  color: #fff;
  font-size: 13px;
}

.fixed-btn1 {
  display: block;
  position: relative;
  margin: 55rpx auto 0;
  font-size: 15px;
  color: #fff;
  background: #e55949;
  height: 40px;
  line-height: 40px;
  width: 100%;
  border-radius: 0;
}

.fixed-btn2 {
  display: block;
  position: relative;
  margin: auto;
  font-size: 15px;
  color: #000;
  background: #ccc;
  height: 40px;
  line-height: 40px;
  width: 100%;
  border-radius: 0;
}

.onekey {
  margin-top: 100rpx;
  text-align: center;
}

.fixed-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 15px;
  color: #fff;
  background: #d93076;
  height: 40px;
  line-height: 40px;
  border-radius: 0;
}
